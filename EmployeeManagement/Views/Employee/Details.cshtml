@model EmployeeManagement.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>

<table class="table table-bordered">
    <tr><th>Name</th><td>@Model.EmpName</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>State</th><td>@Model.state</td></tr>
    <tr><th>City</th><td>@Model.City</td></tr>
    <tr><th>Date Of Joining</th><td>@Model.Dateofjoin.ToShortDateString()</td></tr>
    <tr><th>Active</th><td>@Model.IsActive</td></tr>
</table>

<a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
